{# This is a div containing a list of categories. Expects "to_root"and "categories" arguments #}

<DIV class="categorylist">
    {% for category in categories %}
        <A class="categorylink" href="{{ to_root }}/category/{{ category.publisher.name }}/{{ category.name|normalize_tag }}/">{{ category.name|escape }}</A>{% if not loop.last -%}
            ,
        {% endif %}
    {% endfor %}
</DIV>
